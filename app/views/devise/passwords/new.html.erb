<h2 class="medium-margin-bottom"><%= t(:forgot_password) %></h2>

<div class="form">
  <p class="medium-margin-bottom input-width secondary-info"><%= t(:provide_email) %></p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <% if resource.errors.any? %>
      <div class="input-width flash-message error"><%= t(:error_recovering_password) %></div>
    <% end %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "medium-margin-bottom input-width" %>
    </div>

    <div class="actions">
      <%= f.submit t(:submit), class: "submit-form-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
