<div class="form">
  <h2><%= t(:sign_up) %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "medium-margin-bottom input-width" %>
    </div>

    <div class="field">
      <%= f.label :password, t(:password) %>
      <% if @minimum_password_length %>
      <span class="secondary-info">(<%= @minimum_password_length %> <%= t(:characters_minimum) %> )</span>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "medium-margin-bottom input-width" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t(:password_confirmation) %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "medium-margin-bottom input-width" %>
    </div>

    <div class="actions">
      <%= f.submit t(:sign_up), class: "submit-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
