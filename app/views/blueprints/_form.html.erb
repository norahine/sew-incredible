<div class="form">
  <% if @blueprint.errors.any? %>
    <div class="input-width flash-message error">
      <ul>
        <% @blueprint.errors.full_messages.each do |msg| %>
          <li><%= msg %>.</li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @blueprint do |f| %>
    <div class="field">
      <%= f.label :title, t(:title) %><br />
      <%= f.text_field :title, size: 38, class: "medium-margin-bottom input-width" %>
    </div>

    <div class="field">
      <%= f.label :fabric_type, t(:fabric_type) %><br />
      <%= f.text_field :fabric_type, size: 38, class: "medium-margin-bottom input-width" %>
    </div>

    <div class="field">
      <%= f.label :fabric_length, t(:fabric_length) %><br />
      <%= f.text_field :fabric_length, size: 20, class: "medium-margin-bottom input-width" %>
    </div>

    <div class="field">
      <%= f.label :instructions, t(:instructions) %><br />
      <%= f.text_area :instructions, size: "40x10", class: "medium-margin-bottom input-width" %>
    </div>

    <div class="field">
      <%= f.label :additional_comments, t(:comment) %><br />
      <%= f.text_area :additional_comments, size: "40x5", class: "medium-margin-bottom input-width" %>
    </div>

    <% if @blueprint.new_record? %>
      <%= f.submit t(:add), class: "submit-form-button" %>
    <% else %>
      <%= f.submit t(:update), class: "submit-form-button" %>
    <% end %>
  <% end %>

  <%= link_to t(:cancel), blueprints_path %>
</div>
