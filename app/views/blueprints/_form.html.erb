  <% if @blueprint.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t "blueprints.edit.error_message", count: @blueprint.errors.count %>
      </h2>
      <ul>
        <% @blueprint.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<br />

<div class="form">
  <%= form_for @blueprint do |f| %>
    <div class="field">
      <%= f.label :title, t(:title) %><br />
      <%= f.text_field :title, size: 38, class: "medium-margin-bottom" %>
    </div>

    <div class="field">
      <%= f.label :fabric_type, t(:fabric_type) %><br />
      <%= f.text_field :fabric_type, size: 38, class: "medium-margin-bottom" %>
    </div>

    <div class="field">
      <%= f.label :fabric_length, t(:fabric_length) %><br />
      <%= f.text_field :fabric_length, size: 20, class: "medium-margin-bottom" %>
    </div>

    <div class="field">
      <%= f.label :instructions, t(:instructions) %><br />
      <%= f.text_area :instructions, size: "40x10", class: "medium-margin-bottom" %>
    </div>

    <div class="field">
      <%= f.label :additional_comments, t(:comment) %><br />
      <%= f.text_area :additional_comments, size: "40x5", class: "medium-margin-bottom" %>
    </div>

    <%= link_to t(:cancel), blueprints_path, class: "back-btn" %>

    <% if @blueprint.new_record? %>
      <%= f.submit t(:add), class: "submit-button" %>
    <% else %>
      <%= f.submit t(:update), class: "submit-button" %>
    <% end %>
  <% end %>
</div>
