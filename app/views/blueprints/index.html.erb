<h1 class="all-instructions"><%=t(:all_blueprints)%></h1>

<% if current_user.blueprints.present? %>
  <table>
    <thead>
      <th><%=t(:title)%></th>
      <th><%=t(:fabric)%></th>
      <th colspan="3"></th>
    </thead>

    <tbody>
    <% @blueprints.each do |blueprint| %>
      <tr>
        <td><%= blueprint.title %></td>
        <td><%= blueprint.fabric_type %></td>
        <td><%= link_to t(:show), blueprint_path(blueprint), class: 'action' %></td>
        <td><%= link_to t(:edit), edit_blueprint_path(blueprint), class: 'action' %></td>
        <td><%= link_to t(:delete), blueprint_path(blueprint),
                method: :delete,
                data: { confirm: t(:sure_delete) }, class: 'action' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <h3 class="all-instructions"><%= t(:no_intructions) %> <%= link_to t(:new_blueprint_2), new_blueprint_path %> <%= t(:to_list) %>.</h3>
<% end %>

