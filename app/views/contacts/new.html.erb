<h1><%= t(:contact_form) %></h1>

<div class="form">
  <% if @contact.errors.any? %>
    <div class="input-width flash-message error"><%= t(:error_sending_message) %></div>
  <% end %>

  <%= form_for @contact do |f| %>
    <div class="field">
      <%= f.label :name, t(:name) %><br />
      <%= f.text_field :name, class: "medium-margin-bottom input-width" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, class: "medium-margin-bottom input-width" %>
    </div>

    <div class="field">
      <%= f.label :message, t(:message) %><br />
      <%= f.text_area :message, size: "40x10", class: "medium-margin-bottom input-width" %>
    </div>

    <%= f.submit t(:submit), class: "submit-form-button" %>
  <% end %>
</div>
